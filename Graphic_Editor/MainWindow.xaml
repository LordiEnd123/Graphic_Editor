<Window x:Class="Graphic_Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Graphic Editor" Height="600" Width="1000" MinWidth="800" Background="#F7F7F7">

    <DockPanel>
        <!-- Панель инструментов в 2 ряда -->
        <StackPanel DockPanel.Dock="Top" Background="#EEE" Orientation="Vertical">

            <!-- Первая строка -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Прямоугольник" Width="110" Margin="3" Click="RectangleButton_Click"/>
                <Button Content="Эллипс" Width="90" Margin="3" Click="EllipseButton_Click"/>
                <Button Content="Линия" Width="80" Margin="3" Click="LineButton_Click"/>
                <Button Content="Многоугольник" Width="120" Margin="3" Click="PolygonButton_Click"/>
                <Button Content="Выбор" Width="90" Margin="3" Click="SelectButton_Click"/>
                <Button Content="Удалить" Width="90" Margin="3" Click="DeleteButton_Click"/>
                <Button Content="Отменить" Width="90" Margin="3" Click="UndoButton_Click"/>
            </StackPanel>

            <!-- Вторая строка -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Сохранить" Width="100" Margin="3" Click="SaveProject_Click"/>
                <Button Content="Загрузить" Width="100" Margin="3" Click="LoadProject_Click"/>

                <TextBlock Text="Обводка:" VerticalAlignment="Center" Margin="15,0,3,0"/>
                <ComboBox x:Name="StrokeColorPicker" Width="100" Margin="3" FontSize="11">
                    <ComboBoxItem Content="Чёрный" Tag="Black" IsSelected="True"/>
                    <ComboBoxItem Content="Красный" Tag="Red"/>
                    <ComboBoxItem Content="Синий" Tag="Blue"/>
                    <ComboBoxItem Content="Зелёный" Tag="Green"/>
                    <ComboBoxItem Content="Фиолетовый" Tag="Purple"/>
                </ComboBox>

                <TextBlock Text="Заливка:" VerticalAlignment="Center" Margin="15,0,3,0"/>
                <ComboBox x:Name="FillColorPicker" Width="110" Margin="3" FontSize="11">
                    <ComboBoxItem Content="Без заливки" Tag="Transparent" IsSelected="True"/>
                    <ComboBoxItem Content="Жёлтый" Tag="Yellow"/>
                    <ComboBoxItem Content="Оранжевый" Tag="Orange"/>
                    <ComboBoxItem Content="Голубой" Tag="LightBlue"/>
                    <ComboBoxItem Content="Серый" Tag="Gray"/>
                </ComboBox>

                <Button Content="Применить цвет" Width="120" Margin="3" FontSize="11" Click="ApplyColor_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Рабочее поле -->
        <ScrollViewer 
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  Background="White">
            <Canvas x:Name="DrawCanvas"
                    Background="White"
                    Width="5000"
                    Height="4200"
                    MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                    MouseMove="Canvas_MouseMove"
                    MouseLeftButtonUp="Canvas_MouseLeftButtonUp"
                    MouseRightButtonDown="Canvas_MouseRightButtonDown"
                    MouseWheel="DrawCanvas_MouseWheel"/>
        </ScrollViewer>

    </DockPanel>
</Window>
