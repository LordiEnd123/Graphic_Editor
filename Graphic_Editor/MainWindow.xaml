<Window x:Class="Graphic_Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Graphic Editor" Height="600" Width="900">
    <Grid>
        <StackPanel Orientation="Horizontal" Background="#EEE" Height="40" VerticalAlignment="Top">
            <Button Content="Прямоугольник" Width="120" Margin="5" Click="RectangleButton_Click"/>
            <Button Content="Эллипс" Width="100" Margin="5" Click="EllipseButton_Click"/>
            <Button Content="Линия" Width="100" Margin="5" Click="LineButton_Click"/>
            <Button Content="Многоугольник" Width="120" Margin="5" Click="PolygonButton_Click"/>
        </StackPanel>

        <Canvas x:Name="DrawCanvas"
                Background="White"
                Margin="0,40,0,0"
                MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                MouseMove="Canvas_MouseMove"
                MouseLeftButtonUp="Canvas_MouseLeftButtonUp"
                MouseRightButtonDown="Canvas_MouseRightButtonDown"/>
        
    </Grid>
</Window>